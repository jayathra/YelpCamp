<% layout('layouts/boilerplate') %>

<div class="container justify-content-center align-items-center mt-5 mb-5"> <!-- d-flex justify-content-center align-items-center mt-5 -->
    <div class="row">
        <div class="col-12 col-md-6 offset-md-2 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://japandeluxetours.com/uploads/2019/12/20191223164847_5e01606f3412b.jpg" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" class="validated-form" method="POST" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>